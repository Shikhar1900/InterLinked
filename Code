import React, { useState } from "react";
import "./App.css";

function InterLinked() {
  const [query, setQuery] = useState("");
  const [summary, setSummary] = useState("");
  const [loading, setLoading] = useState(false);

  const handleSummarize = async () => {
    setLoading(true);
    setTimeout(() => {
      setSummary(
        `🔍 Top Insights\n- PM interviews focus on structured thinking.\n- STAR method is key for behavioral rounds.\n\n📚 Resources\n- Cracking the PM Interview\n- Decode and Conquer\n\n🔥 Trends\n- More LinkedIn Live mock interviews.\n- Candidates share Miro/Notion frameworks.`
      );
      setLoading(false);
    }, 1500);
  };

  return (
    <div style={{ maxWidth: "700px", margin: "auto", padding: "2rem" }}>
      <h1 style={{ fontSize: "2rem", textAlign: "center" }}>🔗 InterLinked</h1>
      <p style={{ textAlign: "center", color: "gray" }}>
        Enter a topic and get smart summaries from LinkedIn content.
      </p>
      <textarea
        placeholder="e.g. Product Management interview"
        value={query}
        onChange={(e) => setQuery(e.target.value)}
        rows={6}
        style={{
          width: "100%",
          padding: "1rem",
          fontSize: "1rem",
          marginTop: "1rem",
          borderRadius: "8px",
          border: "1px solid #ccc",
        }}
      />
      <div style={{ textAlign: "center", marginTop: "1rem" }}>
        <button
          onClick={handleSummarize}
          disabled={loading}
          style={{
            padding: "0.6rem 1.2rem",
            fontSize: "1rem",
            borderRadius: "8px",
            backgroundColor: "#333",
            color: "#fff",
            cursor: "pointer",
          }}
        >
          {loading ? "Summarizing..." : "Get Insights"}
        </button>
      </div>
      {summary && (
        <pre
          style={{
            background: "#f4f4f4",
            padding: "1rem",
            marginTop: "2rem",
            borderRadius: "8px",
            whiteSpace: "pre-line",
          }}
        >
          {summary}
        </pre>
      )}
    </div>
  );
}

export default InterLinked;
